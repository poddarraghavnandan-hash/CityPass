{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2022"
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      "jest",
      "jest-image-snapshot"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@citypass/agent": [
        "../../packages/agent/src"
      ],
      "@citypass/analytics": [
        "../../packages/analytics/src"
      ],
      "@citypass/cag": [
        "../../packages/cag/src"
      ],
      "@citypass/db": [
        "../../packages/db/src"
      ],
      "@citypass/llm": [
        "../../packages/llm/src"
      ],
      "@citypass/rag": [
        "../../packages/rag/src"
      ],
      "@citypass/search": [
        "../../packages/search/src"
      ],
      "@citypass/social": [
        "../../packages/social/src"
      ],
      "@citypass/types": [
        "../../packages/types/src"
      ],
      "@citypass/utils": [
        "../../packages/utils/src"
      ],
      "typesense": [
        "../../packages/search/src/typesense-client"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
