# CityPass Production Environment Variables
# Copy this file and update with your production values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://postgres:password@db.supabase.co:5432/postgres"

# =============================================================================
# SUPABASE
# =============================================================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =============================================================================
# TYPESENSE CLOUD (Required for Production)
# =============================================================================
# Sign up at: https://cloud.typesense.org/
TYPESENSE_HOST="xxx.a1.typesense.net"
TYPESENSE_PORT="443"
TYPESENSE_PROTOCOL="https"
TYPESENSE_API_KEY="your-typesense-api-key"

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
ANTHROPIC_API_KEY="sk-ant-api03-..."
OPENAI_API_KEY="sk-proj-..."
LLM_PROVIDER="auto"  # 'openai' | 'anthropic' | 'auto'

# =============================================================================
# QDRANT CLOUD (Vector Database)
# =============================================================================
QDRANT_URL="https://your-cluster.cloud.qdrant.io:6333"
QDRANT_API_KEY="your-qdrant-api-key"

# =============================================================================
# NEO4J AURA (Graph Database)
# =============================================================================
NEO4J_URI="neo4j+s://your-instance.databases.neo4j.io"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="your-neo4j-password"
NEO4J_DATABASE="neo4j"

# =============================================================================
# NEXTAUTH
# =============================================================================
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# =============================================================================
# EXTERNAL APIS
# =============================================================================
MAPBOX_API_KEY="pk.eyJ..."

# Optional: Only if using these services
FIRECRAWL_API_KEY="fc-..."
APIFY_API_KEY="apify_api_..."
EVENTBRITE_API_KEY=""
VIATOR_API_KEY=""
CLASSPASS_API_KEY=""

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Optional: Sentry error tracking
SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_SENTRY_DSN="your-public-sentry-dsn"

# =============================================================================
# PUBLIC VARIABLES (Exposed to client)
# =============================================================================
NEXT_PUBLIC_API_URL="https://your-domain.vercel.app"

# =============================================================================
# EMAIL (Optional - for production email notifications)
# =============================================================================
EMAIL_SERVER_HOST="smtp.sendgrid.net"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="apikey"
EMAIL_SERVER_PASSWORD="your-sendgrid-api-key"
EMAIL_FROM="noreply@your-domain.com"

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
PORT=3001
WORKER_PORT=3002
WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# NOTES
# =============================================================================
# - Do NOT use local/Docker services (localhost, Ollama, local Redis) in production
# - All services should be cloud-hosted for production deployment
# - Keep this file secure and never commit to version control
# - For Vercel deployment, set these as environment variables in Vercel dashboard
